{% extends "users/layout.jinja2" %}

{% block user_page_title %}profile{% endblock %}
{% block user_header %}
<p class="user-title type-alt">{{ user.profile.full_name }}</p>
<ul class="action-set user-actions">
  <li><a href="{{ request.path_for(user, 'follow') }}" class="action active"><span class="icon icon-action-star"></span> Following</a></li>
  <li><a href="{{ request.path_for(user, 'friend') }}" class="action"><span class="icon icon-action-heart"></span> Friend</a></li>
  <li><a href="{{ request.path_for(user, 'message') }}" class="action"><span class="icon icon-action-note"></span> Message</a></li>
  <li><a href="{{ request.path_for(user, 'ignore') }}" class="action"><span class="icon icon-action-cancel"></span> Ignore</a></li>
</ul>
{% endblock %}

{% block user_body %}

<div class="user-latest">
  <h3 class="title secondary toggle disclose title-toggle-max-m" data-toggle-target="next">Latest</h3>
  <div class="grid thumbs-grid full toggle-target-max-m">
    {% for sub in submissions %}{{ f.submission_thumb(sub, with_caption=False) }}{% endfor %}
    <div><a href="{{ request.path_for(user, 'works') }}" class="action disclose">Full works</a></div>
  </div><!-- .thumbs-grid -->
</div><!-- .user-latest -->

<div class="user-about">
  <h3 class="title secondary toggle disclose title-toggle-max-m" data-toggle-target="next">Profile</h3>
  <div class="formatted toggle-target-max-m">
    <p>
      <strong class="icon icon-location">Location:</strong> {#{ user.profile.location }#}<br />
      <strong class="icon icon-stopwatch"></strong> Member since {{ user.profile.unixtime | relative_date }}
    </p>
    <p>
      <span class="dot bg-positive"></span> Commissions: <strong class="color-positive">Open</strong><!-- , <a href="" class="action small disclose">$10&ndash;$400</a> --><br />
      <span class="dot bg-neutral"></span> Trades: <strong class="color-neutral">Sometimes</strong><br />
      <span class="dot bg-negative"></span> Requests: <strong class="color-negative">Closed</strong>
    </p>

    {{ user.profile.profile_text | markdown }}
  </div>
</div><!-- .user-about -->

<div class="user-highlight content-group">
  {% if featured %}
  <h3 class="title secondary toggle disclose title-toggle max-m" data-toggle-target="next">Featured work</h3>
  <div class="toggle-target-max-m">
    <h3 class="title secondary"><a href="{{ request.path_for(featured) }}">{{ featured.title }}</a></h3>
    <h4 class="title-complement">Featured work, shared {{ featured.unixtime | relative_date }}</h4>
    <div class="user-featured">
      <a href="submission.htm" class="thumb-container"><img class="thumb" src="{{ featured.submission_media['display_url'] }}" alt="" /></a>
    </div><!-- .user-featured -->
  </div>
  {% endif %}

  <h3 class="title secondary toggle disclose title-toggle max-m" data-toggle-target="next">Latest Journal</h3>

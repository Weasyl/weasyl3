<div class="user-comments">
  <h4 class="title secondary toggle disclose title-toggle-max-m" data-toggle-target="next">Shouts</h4>
  <div class="toggle-target-max-m">
    {% if request.current_user %}
    <form action="{{ request.path_for(user, 'shout') }}" class="comment" method="post">
      {{ f.form_errors(_comment_errors) }}
      {{ _comment_form['csrf_token'].serialize() | safe }}
      {{ f.user_avatar(request.current_user) }}
      <div class="comment-box hypothetical">
        <div class="comment-info">{{ f.user_link(request.current_user) }}</div>
        {{ _comment_form['comment'].serialize() | safe }}
        <ul class="comment-actions action-set">
          <li><a href="#" class="action small">Formatting help</a></li>
        </ul>
        <button type="submit" name="save" class="comment-submit action disclose">Save</button>
      </div><!-- .comment-box -->
    </form><!-- .comment -->
    {% endif %}

    <ol class="comment-tree">
      {% for shout in shouts %}{{ f.show_comment(shout, user.userid) }}{% endfor %}
    </ol>
    <div class="user-more"><a href="#" class="action disclose">See all 102 shouts</a></div>
  </div>
</div><!-- .user-comments -->
{% endblock %}


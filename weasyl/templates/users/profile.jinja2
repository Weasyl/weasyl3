        {% for submission in submissions %}
          <figure class="grid-item">
            <a href="{{ submission.canonical_path(request) }}">
              <div class="thumb-container">
                <img class="thumb" src="{{ submission.submission_media['display_url'] }}" alt="{{ submission.title }}" />
                <div class="rating {{ submission.rating }}">Rated {{ submission.rating }}</div>
                <div class="type"><div class="ribbon"><span class="icon icon-type-multi">Multimedia</span></div></div>
              </div>
            </a>
          </figure>
        {% endfor %}
        <div><a href="{{ request.resource_path(None, '~' + user.login_name, 'works') }}" class="action disclose">Full works</a></div>
      </div><!-- .thumbs-grid -->
    </div><!-- .user-latest -->

    <div class="user-about">

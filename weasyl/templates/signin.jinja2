{% extends "layout.jinja2" %}

{% block title %}Sign In{% endblock %}
{% block body %}
<div class="content">
  <div class="title-wrap small-width">
    <h3 class="title primary">Sign In</h3>
  </div>
  <form action="#" method="post" class="login-form standard-form small-width">
    <label class="active-label">
      <span>Username or email</span>
      <input type="text" class="text-input" name="u" tabindex="1" required />
    </label>
    <label class="active-label">
      <span>Password</span>
      <input type="password" class="text-input" name="p" tabindex="1" />
    </label>
    <button type="submit" class="action disclose" tabindex="1">Sign in</button>
    <ul class="actions">
      <li><a href="#">Create a new account</a></li>
      <li><a href="#">Forgot your info?</a></li>
    </ul>
  </form>
</div><!-- .home-update -->
{% endblock %}
